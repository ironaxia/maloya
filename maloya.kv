#:kivy 1.2.0
<StartScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Maloya"
            font_size: '20sp'
        Button:
            text: "New project"
            opacity: 1 if self.state == 'normal' else 0.5
            color: 0.1, 0.7, 1, 1
        Button:
            text: "Load project"
            opacity: 1 if self.state == 'normal' else 0.5
            color: 0.1, 0.7, 1, 1
        Button:
            text: "Exit"
            opacity: 1 if self.state == 'normal' else 0.5
            color: 0.1, 0.7, 1, 1
            on_press: root.exit()

<RootWidget>:
    StartScreen:
        name: "start_screen"